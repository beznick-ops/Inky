[Unit]
Description=Inky calendar display update
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
WorkingDirectory=/home/pi/inky-calendar
ExecStart=/home/pi/inky-calendar/.venv/bin/python /home/pi/inky-calendar/inky_calendar.py
Environment=INKY_CONFIG=/home/pi/inky-calendar/config.yaml

[Install]
WantedBy=multi-user.target
