[Unit]
Description=Listen for Inky button presses to refresh the calendar
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=inky
WorkingDirectory=/home/inky/inky-calendar
ExecStart=/home/inky/inky-calendar/.venv/bin/python /home/inky/inky-calendar/inky_calendar.py --listen-buttons
Environment=INKY_CONFIG=/home/inky/inky-calendar/config.yaml
Environment=GPIOZERO_PIN_FACTORY=lgpio
Restart=on-failure

[Install]
WantedBy=multi-user.target
